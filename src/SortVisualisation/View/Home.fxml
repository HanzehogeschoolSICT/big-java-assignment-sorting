                        </BarChart>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="780.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                           <children>
                              <Region prefHeight="52.0" prefWidth="46.0" />
