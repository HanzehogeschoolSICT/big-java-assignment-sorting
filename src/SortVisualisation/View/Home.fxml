                                    <Insets />
                                 </opaqueInsets>
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Button>
                              <Region prefHeight="52.0" prefWidth="22.0" />
                              <Button mnemonicParsing="false" text="+1 Step">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Button>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </HBox>
                     </children>
                     <opaqueInsets>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </opaqueInsets>
