<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="SortVisualisation.Controller.SuperController">
    <TabPane minHeight="500.0" minWidth="800.0" tabClosingPolicy="UNAVAILABLE" tabMinHeight="25.0" tabMinWidth="100.0">
        <Tab text="BubbleSort">
            <!--include bubble sort fxml -> met bubblesortcontroller-->
            <VBox>
                <BarChart>
                    <xAxis>
                        <CategoryAxis prefHeight="0.0" prefWidth="741.0" side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT"/>
                    </yAxis>
                </BarChart>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
                    <Button mnemonicParsing="false" text="Start">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Button>
                    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="+1 Step">
                        <HBox.margin>
                            <Insets left="20.0"/>
                        </HBox.margin>
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Button>
                    <padding>
                        <Insets left="41.0"/>
                    </padding>
                </HBox>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </VBox>
        </Tab>
        <Tab text="InsertionSort">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
        </Tab>
        <Tab text="QuickSort">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
        </Tab>
    </TabPane>
</Pane>
