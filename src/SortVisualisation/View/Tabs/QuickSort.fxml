<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<Tab text="QuickSort" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="SortVisualisation.Controller.QuickSortController">
    <VBox>
        <BarChart>
            <xAxis>
                <CategoryAxis prefHeight="0.0" prefWidth="741.0" side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
        </BarChart>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
            <Button
                    mnemonicParsing="false"
                    text="Start"
                    fx:id="btnStartPause"
                    onAction="#startOrPauseSorting">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
            <Button
                    layoutX="10.0"
                    layoutY="10.0"
                    mnemonicParsing="false"
                    text="+1 Step"
                    fx:id="btnOneStep"
                    onAction="#visualiseOneSortingStep">
                <HBox.margin>
                    <Insets left="20.0"/>
                </HBox.margin>
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
            <padding>
                <Insets left="41.0"/>
            </padding>
        </HBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
</Tab>