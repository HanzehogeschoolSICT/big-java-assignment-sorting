<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.Region?>
<Tab text="BubbleSort" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="SortVisualisation.Controller.BubbleSortController">
    <VBox>
        <BarChart fx:id="barChart"
                  legendVisible="false"
                  barGap="3"
                  categoryGap="0"
                  title="BubbleSort Data">
            <yAxis>
                <NumberAxis label="Values"
                            fx:id="bcYAxis"
                            side="LEFT"/>
            </yAxis>
            <xAxis>
                <CategoryAxis label="Indices"
                            fx:id="bcXAxis"
                            side="BOTTOM"/>
            </xAxis>
        </BarChart>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" VBox.vgrow="ALWAYS">
            <Button
                mnemonicParsing="false"
                text="Start"
                fx:id="btnStartPause"
                onAction="#startOrPauseSorting">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
            <Button
                layoutX="10.0"
                layoutY="10.0"
                mnemonicParsing="false"
                text="+1 Step"
                fx:id="btnOneStep"
                onAction="#visualiseOneSortingStep">
                <HBox.margin>
                    <Insets left="20.0"/>
                </HBox.margin>
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Label
                layoutX="100.0"
                layoutY="100.0"
                text="Number of bars:">
                <HBox.margin>
                    <Insets right="15.0" />
                </HBox.margin>
            </Label>
            <TextField prefWidth="70.0"
                    promptText="0-1000"
                    fx:id="fldInput"/>
            <Button
                layoutX="10.0"
                layoutY="10.0"
                mnemonicParsing="false"
                text="Generate"
                fx:id="btnInput"
                onAction="#visualiseInput">
                <HBox.margin>
                    <Insets left="20.0"/>
                </HBox.margin>
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
            <padding>
                <Insets left="48.0"/>
            </padding>
        </HBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
</Tab>